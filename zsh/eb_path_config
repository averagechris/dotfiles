# guard everything by looking for eventbrite checkout
if [ -d "$HOME/eventbrite" ]; then
    export EVENTBRITE="$HOME/eventbrite"
    source "$HOME/.private_variables"

    # create a variable for each top-level directory in eventbrite
    for dir in `ls $EVENTBRITE`; do
        name=`echo $dir | sed 's/_service//g' | tr - _ | tr '[a-z]' '[A-Z]'`
        eval export "$name"="$EVENTBRITE/$dir"
    done;
fi
